<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="rviz" default="true" description="Launch rviz"/>
    <arg name="rviz_config" default="$(find-pkg-share chicken_core)/rviz/chicken_core.rviz" description="rviz config file"/>
    <arg name="rviz_respawn" default="true" description="rviz respawn"/>
    <include file="$(find-pkg-share control_bringup)/launch/control_bringup.xml">
    </include>
    <include file="$(find-pkg-share localization_bringup)/launch/localization_bringup.launch.xml">
    </include>
    <include file="$(find-pkg-share sensor_bringup)/launch/sensor_bringup.xml">
    </include>
    <include file="$(find-pkg-share planner_bringup)/launch/planner_bringup.xml">
    </include>

    <!--launch rviz-->
    <node pkg="rviz2" exec="rviz2" name="rviz2" args="-d $(var rviz_config)" output="screen" respawn="$(var rviz_respawn)" if="$(var rviz)"/>

</launch>